DOT_FONTSIZE           = 10
DOT_PATH               =

# --- Other general settings ---
INPUT_ENCODING         = UTF-8      
OUTPUT_LANGUAGE        = English    
OPTIMIZE_OUTPUT_FOR_C  = YES        # C-specific optimizations for Doxygen output
MACRO_EXPANSION        = YES        
EXPAND_ONLY_PREDEF     = NO
PREDEFINED             =             # Add any project-specific predefined macros here (e.g., MY_DEFINE=1)

# Markdown support using Markdown syntax within the Doxygen comments.
MARKDOWN_SUPPORT       = YES
AUTOLINK_SUPPORT       = YES

# Disable source code Browse within Doxygen's own output, as Sphinx will handle this if needed.
SOURCE_BROWSER         = NO
